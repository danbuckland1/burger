<div class="jumbotron jumbotron-fluid">
  <div class="container">
    <h1 class="display-4">CHEESEBURGER! CHEESEBURGER! CHEESEBURGER!</h1>
    <img src="../public/assets/img/burger-wallpaper.png" alt="Burger Photo" height="42" width="42">
    {{!-- <p class="lead">This is a modified jumbotron that occupies the entire horizontal space of its parent.</p> --}}
  </div>
</div>

<h1>Burgers</h1>

<ul>
  {{#each burgers}}
    {{#unless devoured}}
      {{> burgers/burger-block devoured=false}}
    {{/unless}}
  {{/each}}
</ul>

<h1>EATEN</h1>

<ul>
  {{#each burgers}}
    {{#if devoured}}
      {{> burgers/burger-block devoured=false}}
    {{/if}}
  {{/each}}
</ul>

<h2>Order a Burger</h2>
<form class="create-form">

  <div class="form-group">
    <label form="burger">Let's have a...</label>
    <input type="text" id="burger" name="name">
  </div>

  <div class="form-group">
    <label form="eaten">EATEN</label>
  </div>

  <button type="submit">Add To Menu</button>
</form>


